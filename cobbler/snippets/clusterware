cat << 'EOF' > /var/lib/symphony/firstrun/scripts/clusterware.bash
#If symphony cluster tools are available via NFS copy in profile.d scripts
if [ -f /opt/clusterware/var/cache/clusterware/src/clusterware/etc/system/alces-clusterware.sh ]; then
  cp -v /opt/clusterware/var/cache/clusterware/src/clusterware/etc/system/alces-clusterware.* /etc/profile.d/.
fi
OS=el6
if [ -f /etc/redhat-release ]; then
  if ( grep -q 7. /etc/redhat-release ) ; then
    OS=el7
  fi
fi
sed -i /etc/profile.d/alces-clusterware.sh -e "s/^export alces_OS=.*$/export alces_OS=$OS/g"
sed -i /etc/profile.d/alces-clusterware.csh -e "s/^setenv alces_OS.*$/setenv alces_OS $OS/g"
EOF

