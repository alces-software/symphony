IPPRV=10.110.$IPQUAD3.$IPQUAD4
IPIB=10.112.$IPQUAD3.$IPQUAD4

#Interface names (leave blank if no interface on relating network)
PRV_INT=eth0
IB_INT=
#required
BUILD_INT=eth1
MGT_INT=eth2

#Disk info
DISKLAYOUT=default-small
#usually sda for a hw machines or vda for a vm
DISK=vda
